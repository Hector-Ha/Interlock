# Interlock Production Environment
# Copy this file to .env and update with your values

# Server Configuration
PORT=8080
NODE_ENV=production
CLIENT_URL=https://your-vercel-domain.com

# Database Configuration (Dockerized Postgres on EC2)
DB_USER=interlock
DB_PASSWORD=change_me
DB_NAME=interlock

# GitHub Container Registry (for pulling images on EC2)
GHCR_USERNAME=your_github_username
GHCR_PAT=ghp_your_personal_access_token

# Optional image tag (defaults to latest)
# IMAGE_TAG=latest

# Application Secrets (required)
JWT_SECRET=your-32-char-min-secret
ENCRYPTION_KEY=32-character-key-here

# Plaid (optional)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=production
PLAID_PRODUCTS=auth,transactions,identity
PLAID_COUNTRY_CODES=US

# Dwolla (optional)
DWOLLA_KEY=
DWOLLA_SECRET=
DWOLLA_ENV=production
DWOLLA_BASE_URL=https://api.dwolla.com
DWOLLA_WEBHOOK_SECRET=

# Email (optional)
SENDGRID_API_KEY=
SENDGRID_SENDER_EMAIL=

# Monitoring (optional)
SENTRY_DSN=
ENABLE_LOGS=false
